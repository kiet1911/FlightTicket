@model AirlinesReservationSystem.Models.Baggage

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal-body container mt-3">
    <div class="card">
        <div class="card-header">
            <h4>
                Xóa ký gửi
            </h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>ID:</label>
                <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.id)" readonly>
            </div>
            <div class="form-group">
                <label>Xách tay:</label>
                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.carryon_bag)" readonly>
            </div>
            <div class="form-group">
                <label>Ký gửi:</label>
                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.signed_luggage)" readonly>
            </div>
            <div class="form-group">
                <label>Mã khách hàng:</label>
                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.user_id)" readonly>
            </div>
            <div class="form-group">
                <label>Mã vé:</label>
                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.code)" readonly>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>